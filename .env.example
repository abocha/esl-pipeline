# Base runtime: Node 24.11.1+ (see .nvmrc / package.json)

# Notion
NOTION_TOKEN=secret_xxxxx
# Optional: data source for student lookup
# STUDENTS_DB_ID=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# ElevenLabs
ELEVENLABS_API_KEY=elevenlabs_xxxxx
# Optional overrides (defaults shown)
# ELEVENLABS_MODEL_ID=eleven_multilingual_v2
# ELEVENLABS_OUTPUT_FORMAT=mp3_22050_32
# TTS mode defaults (dialogue/monologue/auto)
# ELEVENLABS_TTS_MODE=auto
# ELEVENLABS_DIALOGUE_LANGUAGE=en
# ELEVENLABS_DIALOGUE_STABILITY=0.7
# ELEVENLABS_DIALOGUE_SEED=0

# AWS / S3 (used for uploads)
AWS_REGION=ap-southeast-1
AWS_ACCESS_KEY_ID=AKIAxxxxxxxxxxxx
AWS_SECRET_ACCESS_KEY=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
S3_BUCKET=esl-notion-tts
S3_PREFIX=audio/assignments

# Manifest store selection (filesystem by default)
# ESL_PIPELINE_MANIFEST_STORE=filesystem
# For S3 manifests, set:
# ESL_PIPELINE_MANIFEST_STORE=s3
# ESL_PIPELINE_MANIFEST_BUCKET=esl-pipeline-manifests
# ESL_PIPELINE_MANIFEST_PREFIX=manifests/dev
# ESL_PIPELINE_MANIFEST_ROOT=/workspace

# Remote config provider (optional)
# ESL_PIPELINE_CONFIG_PROVIDER=http
# ESL_PIPELINE_CONFIG_ENDPOINT=https://config.example.com
# ESL_PIPELINE_CONFIG_TOKEN=changeme
# ESL_PIPELINE_CONFIG_PRESETS_PATH=presets.json
# ESL_PIPELINE_CONFIG_STUDENTS_PATH=students.json
# ESL_PIPELINE_CONFIG_VOICES_PATH=voices.yml

# Optional: behavior toggles
# LOG_LEVEL=info
