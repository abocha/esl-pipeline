{
  "name": "@esl-pipeline/md-validator",
  "version": "2.0.3",
  "private": true,
  "description": "Validate ESL homework markdown structure and frontmatter.",
  "keywords": [
    "esl",
    "markdown",
    "validator",
    "cli"
  ],
  "license": "UNLICENSED",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/src/index.d.ts",
      "import": "./dist/src/index.js",
      "default": "./dist/src/index.js"
    },
    "./package.json": "./package.json"
  },
  "main": "./dist/src/index.js",
  "types": "./dist/src/index.d.ts",
  "bin": {
    "md-validator": "dist/bin/cli.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "clean": "node -e \"fs.rmSync('dist', {recursive:true, force:true})\"",
    "dev": "tsx watch src/index.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@esl-pipeline/contracts": "workspace:*",
    "commander": "^14.0.2",
    "gray-matter": "^4.0.3",
    "picocolors": "^1.1.1",
    "remark-parse": "^11.0.0",
    "unified": "^11.0.5",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@types/mdast": "^4.0.4",
    "@types/node": "^24.10.1",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "vitest": "^4.0.14"
  },
  "engines": {
    "node": ">=24.11.1"
  }
}
