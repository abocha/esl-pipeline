{
  // Extend the repo base config so editor/ESLint see shared settings.
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    // Frontend-specific overrides.
    "target": "ES2022",
    "module": "ESNext",
    "lib": ["ES2022", "DOM"],
    "moduleResolution": "Node",
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "strict": true,
    "esModuleInterop": true,
    "allowJs": false,
    "resolveJsonModule": true,

    // Make sure Vite/DOM types are available in the editor for ESLint/TS.
    "types": ["vite/client"],

    // Local path aliases for this package.
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  // Include this package's sources and the workspace root so that
  // eslint-import-resolver-typescript / TS can resolve workspace deps
  // like "vite", "@vitejs/plugin-react-swc", "react", etc.
  "include": [
    "../../**/*.d.ts",
    "../../node_modules/**/*",
    "src/**/*.ts",
    "src/**/*.tsx",
    "vite.config.ts"
  ],
  "exclude": ["dist"]
}
