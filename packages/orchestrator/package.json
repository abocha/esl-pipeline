{
  "name": "@esl-pipeline/orchestrator",
  "version": "2.0.2",
  "private": false,
  "type": "module",
  "license": "UNLICENSED",
  "description": "One-command ESL assignment pipeline (validation, Notion import, TTS, upload).",
  "keywords": [
    "esl",
    "pipeline",
    "notion",
    "tts",
    "cli"
  ],
  "engines": {
    "node": ">=24.10.0"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist",
    "README.md",
    "CHANGELOG.md",
    "docs"
  ],
  "publishConfig": {
    "access": "public"
  },
  "bin": {
    "esl": "dist/cli.js"
  },
  "scripts": {
    "build": "tsup --config tsup.config.ts && tsc -p tsconfig.types.json",
    "postbuild": "node ./scripts/postbuild.js",
    "clean": "node -e \"fs.rmSync('dist', {recursive:true, force:true})\"",
    "dev": "tsx watch bin/cli.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "prepack": "pnpm run build",
    "docker:build": "cd ../.. && docker build -f packages/orchestrator/Dockerfile -t esl-pipeline/orchestrator:local .",
    "docker:run": "docker run --rm esl-pipeline/orchestrator:local --version",
    "examples/service": "pnpm --dir examples/service exec"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.936.0",
    "@aws-sdk/s3-request-presigner": "^3.936.0",
    "@elevenlabs/elevenlabs-js": "^2.24.1",
    "@notionhq/client": "^5.4.0",
    "@esl-pipeline/shared-infrastructure": "workspace:*",
    "commander": "^14.0.2",
    "enquirer": "^2.4.1",
    "find-up": "^8.0.0",
    "globby": "^16.0.0",
    "gray-matter": "^4.0.3",
    "js-yaml": "^4.1.1",
    "ora": "9.0.0",
    "picocolors": "^1.1.1",
    "remark-parse": "^11.0.0",
    "unified": "^11.0.5",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@esl-pipeline/contracts": "workspace:*",
    "@esl-pipeline/md-extractor": "workspace:*",
    "@esl-pipeline/md-validator": "workspace:*",
    "@esl-pipeline/notion-add-audio": "workspace:*",
    "@esl-pipeline/notion-colorizer": "workspace:*",
    "@esl-pipeline/notion-importer": "workspace:*",
    "@esl-pipeline/storage-uploader": "workspace:*",
    "@esl-pipeline/tts-elevenlabs": "workspace:*",
    "@types/node": "^24.10.1",
    "tsup": "8.5.1",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "vitest": "^4.0.12"
  }
}