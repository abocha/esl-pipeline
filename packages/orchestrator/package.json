{
  "name": "@esl-pipeline/orchestrator",
  "version": "1.5.0",
  "private": true,
  "type": "module",
  "license": "UNLICENSED",
  "description": "One-command ESL assignment pipeline (validation, Notion import, TTS, upload).",
  "keywords": [
    "esl",
    "pipeline",
    "notion",
    "tts",
    "cli"
  ],
  "engines": {
    "node": ">=18.18"
  },
  "main": "./dist/src/index.js",
  "types": "./dist/src/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/src/index.d.ts",
      "import": "./dist/src/index.js",
      "default": "./dist/src/index.js"
    },
    "./manifest": "./dist/src/manifest.js",
    "./package.json": "./package.json"
  },
  "files": [
    "dist"
  ],
  "bin": {
    "esl-orchestrator": "dist/bin/cli.js"
  },
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "postbuild": "tsx ./scripts/postbuild.ts",
    "clean": "rimraf dist",
    "dev": "tsx watch bin/cli.ts",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@esl-pipeline/md-extractor": "workspace:*",
    "@esl-pipeline/md-validator": "workspace:*",
    "@esl-pipeline/notion-add-audio": "workspace:*",
    "@esl-pipeline/notion-colorizer": "workspace:*",
    "@esl-pipeline/notion-importer": "workspace:*",
    "@esl-pipeline/storage-uploader": "workspace:*",
    "@esl-pipeline/tts-elevenlabs": "workspace:*",
    "commander": "^14.0.2",
    "enquirer": "^2.4.1",
    "find-up": "^8.0.0",
    "globby": "^15.0.0",
    "ora": "9.0.0",
    "picocolors": "^1.1.1",
    "prompts": "^2.4.2"
  },
  "devDependencies": {
    "@types/node": "^24.9.2",
    "@types/prompts": "^2.4.9",
    "rimraf": "^6.0.1",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "vitest": "^4.0.5"
  }
}
