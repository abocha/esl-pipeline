{
  "name": "@esl-pipeline/notion-colorizer",
  "version": "2.0.0",
  "private": true,
  "description": "Apply heading color presets to Notion pages for ESL assignments.",
  "keywords": [
    "esl",
    "notion",
    "color",
    "cli"
  ],
  "license": "UNLICENSED",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/src/index.d.ts",
      "import": "./dist/src/index.js",
      "default": "./dist/src/index.js"
    },
    "./package.json": "./package.json"
  },
  "main": "./dist/src/index.js",
  "types": "./dist/src/index.d.ts",
  "bin": {
    "notion-colorizer": "dist/bin/cli.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "clean": "node -e \"fs.rmSync('dist', {recursive:true, force:true})\"",
    "dev": "tsx watch bin/cli.ts",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@esl-pipeline/contracts": "workspace:*",
    "@notionhq/client": "^5.4.0",
    "commander": "^14.0.2",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@types/node": "^24.10.1",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "vitest": "^4.0.13"
  },
  "engines": {
    "node": ">=24.10.0"
  }
}
