{
  "name": "@esl-pipeline/tts-elevenlabs",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "license": "UNLICENSED",
  "description": "Generate study-text audio via ElevenLabs with caching and voice selection.",
  "keywords": [
    "esl",
    "tts",
    "elevenlabs",
    "audio"
  ],
  "engines": {
    "node": ">=18.18"
  },
  "main": "./dist/src/index.js",
  "types": "./dist/src/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/src/index.d.ts",
      "import": "./dist/src/index.js",
      "default": "./dist/src/index.js"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist"
  ],
  "bin": {
    "tts-elevenlabs": "dist/bin/cli.js",
    "tts-voices": "dist/bin/voices.js"
  },
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "clean": "rimraf dist",
    "dev": "tsx watch bin/cli.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "voices:sync": "node dist/bin/voices.js"
  },
  "dependencies": {
    "@esl-pipeline/ffmpeg-binary": "workspace:*",
    "@elevenlabs/elevenlabs-js": "^2.20.1",
    "@esl-pipeline/md-extractor": "workspace:*",
    "js-yaml": "^4.1.0"
  },
  "devDependencies": {
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^24.9.1",
    "rimraf": "^6.0.1",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "vitest": "^4.0.3"
  }
}
